<% content_for :title, "Edit category" %>
<%= render "nav" %>

<div class="container mt-5">
  <!-- Page Header -->
  <div class="text-center mb-4">
    <h1 class="display-4">Edit category</h1>
  </div>

  <%= form_with(model: @category, class: 'form') do |form| %>
    <% if @category.errors.any? %>
      <!-- Error Display Section -->
      <div class="alert alert-danger w-75 mx-auto">
        <h4 class="alert-heading"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h4>
        <ul class="mb-0">
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Card Wrapper -->
    <div class="card shadow-lg p-4 w-75 mx-auto">
      <div class="card-body">

        <!-- category Name Input -->
        <div class="mb-4">
          <%= form.label :name, "category Name", class: 'form-label fw-bold' %>
          <%= form.text_field :name, class: 'form-control form-control-lg', placeholder: 'Enter category name' %>
        </div>

        <!-- category Description Input -->
        <div class="mb-4">
          <%= form.label :description, "Description", class: 'form-label fw-bold' %>
          <%= form.text_area :description, rows: 3, class: 'form-control', placeholder: 'Add some details about the category...' %>
        </div>


        <!-- Action Buttons -->
        <div class="d-flex justify-content-center gap-2 mt-4">
          <%= form.submit "Save Changes", class: "btn btn-success btn-lg px-4 shadow-sm" %>
          <%= link_to "Show category", @category, class: "btn btn-primary btn-lg px-4 shadow-sm" %>
          <%= link_to "Back to categories", categories_path, class: "btn btn-secondary btn-lg px-4 shadow-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
