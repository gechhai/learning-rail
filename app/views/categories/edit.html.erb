<% content_for :title, "Editing Category" %>
<%= render "nav"%>
<h1 class="d-flex justify-content-center">Editing Category</h1>
<%= form_with(model: @category) do |form| %>
  <% if @category.errors.any? %>
    <div class="d-flex flex-column align-items-center">
      <div class="card w-75">
        <div class="card-body">
          <div style="color: red">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this @category from being saved:</h2>
            <ul>
              <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="d-flex flex-column align-items-center">
    <div class="card w-75">
      <div class="card-body">
        <div class="input-group mb-3">
          <%= form.text_field :name, class: 'form-control', placeholder: '@category Name', aria: { label: '@category Name' } %>
        </div>
        <div class="input-group mb-3">
          <%= form.text_field :description, class: 'form-control', placeholder: '@category Description', aria: { label: '@category Description' } %>
        </div>
        <div class="input-group mb-3">
          <%= form.submit "Save task", class: "btn btn-success me-2 rounded-1" %>
          <%= link_to "Show this task", @category, class:"btn btn-primary me-2 rounded-1"%>
          <%= link_to "Back to tasks", tasks_path, class:"btn btn-primary me-2 rounded-1"%>
        </div>
      </div>
    </div>
  </div>
<% end %>