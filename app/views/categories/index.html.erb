<% content_for :title, "Categories" %>
<%= render "nav" %>

<div class="container my-5">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div id="tasks" class="card shadow-lg p-4 mx-auto" style="max-width: 1000px;">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Category List</h3>

      <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">Category Name</th>
              <th scope="col">Description</th>
              <th scope="col" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each_with_index do |category, index| %>
              <tr id="<%= dom_id(category) %>">
                <td class="fw-bold"><%= category.name %></td>
                <td><%= truncate(category.description, length: 50) %></td>
                <td class="d-flex flex-row justify-content-center">
                  <%= link_to "Show", category, class: "btn btn-info btn-sm me-2" %>
                  <%= link_to "Edit", edit_task_path(category), class: "btn btn-secondary btn-sm me-2" %>
                  <%= button_to "Delete", category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "btn btn-danger btn-sm me-2" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= link_to "Add New Category", new_category_path, class: "btn btn-success btn-lg px-5 shadow" %>
      </div>
    </div>
  </div>
</div>
